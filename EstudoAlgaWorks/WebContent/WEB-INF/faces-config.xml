<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

<!-- 	Permite gerenciar as exceções, mostrando de mensagem de erro tratada para o usuário,
permitindo também gerar arquivo de log. -->
	<factory>
		<exception-handler-factory>br.com.valdemir.util.jsf.JsfExceptionHandlerFactory</exception-handler-factory>
	</factory>
<!-- 	 -->

<!-- 	Faz com que todas as mensagens de validação que aparece na pagina seja em portugues -->
<!-- 	@NotNull definido nas entidades. -->
	<application>
<!-- 		propriedade fas com que aparece na pagina o nome do campo que refere-se a mensagem -->
		<message-bundle>br.com.valdemir.resources.Messages</message-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>
</faces-config>
