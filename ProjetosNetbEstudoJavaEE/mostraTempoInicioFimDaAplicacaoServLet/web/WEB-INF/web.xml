<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>acessaAplicacao</servlet-name>
        <servlet-class>AcessaAplicacao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>acessaAplicacao</servlet-name>
        <url-pattern>/testa-aplicacao</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>testa-aplicacao</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>ControleDeAplicacao</listener-class>
    </listener>
</web-app>
